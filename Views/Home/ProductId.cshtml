@* @page *@
@model final_project.Dtos.Product.ProductDTO
@{
    ViewData["Title"] = @Model.ProductName;
}

@* <h1>@Html.DisplayFor(model => model.ProductName)</h1> *@
<style>
    .block{
        display: block;
        width: 100%;
        height: 7vh;
        border-radius: 15px;
    }

    #mydiv{
        position: absolute;
        width: 45%;
        height: 100%;
        display: flex;
        flex-direction: column;
        @* justify-content: space-between; *@
    }
        #mydiv div{
            height: 30%;
            width: 100%;
        }
</style>


<html>
<body style="background-color: #1e1e1e;">
    <div class="Container" style="background-color: #1e1e1e;">
        <div class="row">
            <div class="col align-self-start">
                <img src="@Html.DisplayFor(model => model.ImageURL)" width="500" height="600">
            </div>
            <div class="col" style="height: 100hv;">
                <div id="mydiv">
                        <div class= "col align-self-start">
                            <h2 style="color: white;">@Html.DisplayFor(model => model.ProductName)</h2>
                            <br>
                            <br>
                            <h4 style="color: #FF82c9;">RP. @Html.DisplayFor(model => model.Price)</h4>
                            <br>
                            <br>                            
                            <p style="color: white; white-space: pre;">@Html.DisplayFor(model => model.Description)</p>
                        </div>
                        <br><br><br> <br><br>
                        <div class="col align-self-end">
                            <form method="post" asp-controller="Home" asp-action="AddToCart">
                                <input type="hidden" name="productId" value="@Html.DisplayFor(model => model.Id)">
                                <button type="submit" class="block" style = "background-color: #ff82c9;">  <i class="bi bi-cart-fill" style="color: white; font-size: 20px; padding-right: 10px;"></i> <b style="color: white;"> Add To Cart </b> </button>                         
                            </form>
                            <br>
                            <form method="post" asp-controller="Home" asp-action="AddToWishlist">
                                <input type="hidden" name="productId" value="@Html.DisplayFor(model => model.Id)">
                            <button type="submit" class="block" style = "background-color: #ff82c9;"> <i class="bi bi-heart-fill" style="color: white; font-size: 20px; padding-right: 10px;"></i> <b style="color: white;"> Add To Wishlist </b> </button>
                            </form>
                        </div>
                </div>   
            </div>
        </div>
    </div>
</body>