@model final_project.Dtos.User.UserDTO
@{
    ViewData["Title"] = "My Profile";
}

<style>
    .block {
        display: block;
        align-items: center;
        width: 20%;
        height: 5vh;
        border-radius: 15px;
    }

    img{
        border-radius: 50%;
    }
</style>


<body style="background-color: #1e1e1e;">
    <div class="container" style="justify-content: center; align-items: center">
        <div class="d-flex" style="justify-content: center; align-items: center; box-shadow: #FF82c9">
            <img src="@Html.DisplayFor(model => model.ImageURL)" style="width:150px;">
        </div>
        <br>
        <div class="container">
            <h1 style="color: #FF82c9; text-align: center;">
                @Html.DisplayFor(model => model.Name)
            </h1>
        </div>
        <br>
        <div class="d-flex" style="justify-content: center; align-items: center">
            <i class="bi bi-person-fill" style="color: white; font-size: 20px;"></i>
        </div>
        <div class="d-flex" style="justify-content: center; align-items: center">
            <h5 style="color: #FF82c9; text-align: center;">
                @Html.DisplayFor(model => model.Username)
            </h5>
        </div>
        <br>
        <div class="d-flex" style="justify-content: center; align-items: center">
            <i class="bi bi-phone-fill" style="color: white; font-size: 20px;"></i>
        </div>
        <div class="d-flex" style="justify-content: center; align-items: center">
            <h5 style="color: #FF82c9; text-align: center;">
                @Html.DisplayFor(model => model.PhoneNumber)
            </h5>
        </div>
        <br>
        <div class="d-flex" style="justify-content: center; align-items: center">
            <i class="bi bi-envelope-fill" style="color: white; font-size: 20px;"></i>
        </div>
        <div class="d-flex" style="justify-content: center; align-items: center">
            <h5 style="color: #FF82c9; text-align: center;">
                @Html.DisplayFor(model => model.Email)
            </h5>
        </div>
        <br>
        <div class="d-flex" style="justify-content: center; align-items: center">
            <i class="bi bi-pin-map-fill" style="color: white; font-size: 20px;"></i>
        </div>
        <div class="d-flex" style="justify-content: center; align-items: center">
            <h5 style="color: #FF82c9; text-align: center;">
                @Html.DisplayFor(model => model.Address)
            </h5>
        </div>
        <br>
        <br>
        <div style="display:flex; justify-content: center; align-items:center;">            
            <button class="block" style="background-color: #FF82c9">
              <a asp-controller="Login" asp-action="Logout" style="text-decoration: none; color: white;">  
                Log out 
              </a>
            </button>
        </div>
    </div>
</body>
